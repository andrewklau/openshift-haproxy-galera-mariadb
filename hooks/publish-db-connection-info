#!/bin/bash

mysql_url="mysql://$OPENSHIFT_MARIADB_USERNAME:$OPENSHIFT_MARIADB_PASSWORD@$OPENSHIFT_GEAR_DNS:$OPENSHIFT_HAPROXYMARIADB_PROXY_HOST/"

echo "OPENSHIFT_MARIADB_DB_GEAR_UUID=$OPENSHIFT_GEAR_UUID"
echo "OPENSHIFT_MARIADB_DB_GEAR_DNS=$OPENSHIFT_GEAR_DNS"
echo "OPENSHIFT_MARIADB_DB_USERNAME=$OPENSHIFT_MARIADB_USERNAME"
echo "OPENSHIFT_MARIADB_DB_PASSWORD=$OPENSHIFT_MARIADB_PASSWORD"
echo "OPENSHIFT_MARIADB_DB_HOST=$OPENSHIFT_GEAR_DNS"
echo "OPENSHIFT_MARIADB_DB_PORT=$OPENSHIFT_HAPROXYMARIADB_PROXY_HOST"
echo "OPENSHIFT_MARIADB_DB_URL=$mysql_url"

#backward comat to mysql
echo "OPENSHIFT_MYSQL_DB_GEAR_UUID=$OPENSHIFT_GEAR_UUID"
echo "OPENSHIFT_MYSQL_DB_GEAR_DNS=$OPENSHIFT_GEAR_DNS"
echo "OPENSHIFT_MYSQL_DB_USERNAME=$OPENSHIFT_MARIADB_USERNAME"
echo "OPENSHIFT_MYSQL_DB_PASSWORD=$OPENSHIFT_MARIADB_PASSWORD"
echo "OPENSHIFT_MYSQL_DB_HOST=$OPENSHIFT_GEAR_DNS"
echo "OPENSHIFT_MYSQL_DB_PORT=$OPENSHIFT_HAPROXYMARIADB_PROXY_HOST"
echo "OPENSHIFT_MYSQL_DB_URL=$mysql_url"
